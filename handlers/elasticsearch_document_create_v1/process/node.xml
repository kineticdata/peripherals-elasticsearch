<?xml version="1.0" encoding="UTF-8"?>
<taskDefinition id="elasticsearch_document_create" name="Elasticsearch Document Create" schema_version="1.0" version="1">
    <author>support@kineticdata.com</author>
    <description>
        Creates a document in Elasticsearch for specified index / type.
    </description>
    <helpurl></helpurl>
    <visible>true</visible>
    <deferrable>false</deferrable>
    <parameters>
        <parameter id="error_handling" label="Error Handling" required="true"
          tooltip="Determine what to return if an error is encountered." menu="Error Message,Raise Error">Error Message</parameter>
        <parameter id="index" label="Index" required="true"
          tooltip="The index to save the document to."/>
        <parameter id="type" label="Type" required="true"
            tooltip="The document type."/>
        <parameter id="id" label="ID" required="false"
            tooltip="The document ID. Autogenerated by Elasticsearch if not specified."/>
        <parameter id="version" label="Version" required="false"
            tooltip="The document version. Set to one by Elasticsearch if not supplied."/>
        <parameter id="pipeline_id" label="Pipeline ID" required="false"
            tooltip="Elasticsearch Pipeline for preprocessing."/>
        <parameter id="document_json" label="Document JSON:" required="true"
          tooltip="The document details to insert into Elasticsearch, in JSON format."/>
    </parameters>
    <handler name="elasticsearch_document_create" version="1">
        <infos>
            <info name="api_password">&lt;%= @info['api_password'] %&gt;</info>
            <info name="api_server">&lt;%= @info['api_server'] %&gt;</info>
            <info name="api_username">&lt;%= @info['api_username'] %&gt;</info>
        </infos>
        <parameters>
            <parameter name="error_handling">&lt;%= @parameters.has_key?("error_handling") ? @parameters["error_handling"] : "Raise" %&gt;</parameter>
            <parameter name="index">&lt;%= @parameters['index'] %&gt;</parameter>
            <parameter name="type">&lt;%= @parameters['type'] %&gt;</parameter>
            <parameter name="id">&lt;%= @parameters['id'] %&gt;</parameter>
            <parameter name="version">&lt;%= @parameters['version'] %&gt;</parameter>
            <parameter name="pipeline_id">&lt;%= @parameters['pipeline_id'] %&gt;</parameter>
            <parameter name="document_json">&lt;%= @parameters['document_json'] %&gt;</parameter>
        </parameters>
    </handler>
    <results format="xml">
        <result name="Handler Error Message"/>
    </results>
</taskDefinition>
